				<dependency>
					<groupId>de.bwl.bwfla</groupId>
					<artifactId>emil</artifactId>
					<type>war</type>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<id>metadata-oaipmh</id>
			<dependencies>
				<dependency>
					<groupId>de.bwl.bwfla</groupId>
