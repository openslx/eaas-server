				</dependency>
				<dependency>
					<groupId>de.bwl.bwfla</groupId>
					<artifactId>metadata-repository-client</artifactId>
				</dependency>
				<dependency>
					<groupId>de.bwl.bwfla</groupId>
					<artifactId>metadata-oaipmh</artifactId>
					<type>war</type>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<id>environment-proposer</id>
			<dependencies>
				<dependency>
					<groupId>de.bwl.bwfla</groupId>
					<artifactId>environment-proposer</artifactId>
					<type>war</type>
				</dependency>
			</dependencies>
		</profile>

		<profile>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<id>dig-pub-sharing</id>
			<dependencies>
				<dependency>
					<groupId>de.bwl.bwfla</groupId>
					<artifactId>dig-pub-sharing</artifactId>
					<type>war</type>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>
